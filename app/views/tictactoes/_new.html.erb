
  <% if logged_in? %>
    <% if @random_opponent != nil %>
      <%= form_for @tictactoe do |f| %>
        <%= f.hidden_field :x_id, value: @current_user.id, required: true %>
        <%= f.hidden_field :o_id, value: @random_opponent.id, required: true %>
        <%= f.submit "Create new Tic Tac Toe game with random opponent" %> <br><small>( <%= @thisweekusers.count - 1 %> other players recently online )</small>
      <% end %>
    <% else %>
        Create new Tic Tac Toe game with random opponent <br><small>( no opponents available )</small>
    <% end %>
  <% end %>
