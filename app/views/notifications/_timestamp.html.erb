

<% if @note.created_at > 1.day.ago %>
<%= @note.created_at.in_time_zone(@current_user.time_zone).strftime("%B %-d, %-l:%M%p") %>
<% elsif @note.created_at > 1.year.ago %>
<%= @note.created_at.in_time_zone(@current_user.time_zone).strftime("%B %-d") %>
<% else %>
<%= @note.created_at.in_time_zone(@current_user.time_zone).strftime("%B %-d, %Y") %>
<% end %>
