.hidden {
  visibility: hidden !important;
  max-height: 0px;
}
#touchcontrols {
  position: relative;

  z-index: 10;
}

#focus, #helpmodal{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
    background-color: rgba(255, 255, 255, 0.3);
  z-index: 10;
  display: flex;
align-items: center;
justify-content: center;
}
#focusinner, #helpinner {
    background-color: white;
    padding: 5px 10px;
    border-radius: 2px;
position: relative;
}
#helpinner {
    max-width: calc(100% - 8em);
    padding: 1.5em 2em;
}
#questionmark {
color: black;
}
.closehelp {
  position: absolute;
  top: 0.5em;
  right: 0.5em;

  font-size: 30px;
  color: red;
}
.closehelp:hover {
  color: rgb(92, 0, 0);
}
.minemap, .minelink {
  display: grid;
  grid-template-columns: repeat(300, 30px);
  grid-template-rows: repeat(40, 30px);
  overflow: scroll;
  max-height: 70vh;
  background: rgb(125,185,232);
  background: -moz-linear-gradient(top,  rgba(30,87,153,1) 0%, rgba(125,185,232,1) 50%, rgba(125,185,232,1) 50%);
  background: -webkit-linear-gradient(top,  rgba(30,87,153,1) 0%,rgba(125,185,232,1) 50%,rgba(125,185,232,1) 50%);
  background: linear-gradient(to bottom,  rgba(30,87,153,1) 0%,rgba(125,185,232,1) 50%,rgba(125,185,232,1) 50%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1e5799', endColorstr='#7db9e8',GradientType=0 );

}
.minelink {
  grid-template-columns: repeat(20, 30px);
  grid-template-rows: repeat(7, 30px);
overflow: hidden;
}
.minemap::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    background: transparent;
}
.minesquare {
  z-index: 1;

}
.mineforeground {
  width: 100%;
  height: 100%;
  border: none;
  z-index: 5;
}
.mineinventory {
  margin: .3em 20px;
display: flex;
align-items: flex-start;
justify-content: space-between;
}
.mineinventory img {
  height: 15px;
  width: 15px;
  margin-right: .2em;
}
.platformimg img {
  height: 2px;
  width: 15px;
  margin-right: .2em;
}
.sky-background {
  // background-color: rgb(149, 206, 244);
}

.bgcloud {
position: relative;
}
.bgcloud::before {
  content: "";
position: absolute;
width: 60px;
height: 30px;
  background-image: url('<%= image_path('mine/bgcloud.png') %>');
  z-index: 1;
  animation: hover 2s infinite;
  animation-direction: alternate-reverse;
  pointer-events: none;
}
@keyframes hover {
  0% {
    left: 0;
  }
  100% {
    left: 4px;
  }
}
.bggrass {
  position: relative;
}
.bggrass::before {
  content: "";
position: absolute;
left: -5px;
top: -18px;
width: 40px;
height: 50px;
  background-image: url('<%= image_path('mine/bggrass.png') %>');
  z-index: -1;
  // pointer-events: none;
}
.cave-background {
  position: relative;
}
.cave-background::before {
  content: "";
position: absolute;
left: -2px;
top: -2px;
width: 34px;
height: 34px;
  background-image: url('<%= image_path('mine/soilbg.png') %>');
  z-index: -1;
  background-position: center;
}
.empty {
  width: 100%;
  height: 100%;
}
.highlight {
  width: calc(100% - 2px);
  height: calc(100% - 2px);
  border: 2px solid rgba(220, 0, 255, 0.36);
  transition-property: border;
  transition-duration: .5s;
}
.rock {
  position: relative;
}
.rock::before {
  content: "";
  width: 30px;
  height: 30px;
  position: absolute;
  background-image: url('<%= image_path('mine/rock.png') %>');
  border-radius: 5px;
  z-index: 5;
  background-position: center;
}
.soil {
  width: 100%;
  height: 100%;
  position: relative;
}
.soil::before {
  content: "";
position: absolute;
left: -2px;
top: -2px;
width: 34px;
height: 34px;
  background-image: url('<%= image_path('mine/soil.png') %>');
  z-index: 5;
  background-position: center;
}
.soil2 {
