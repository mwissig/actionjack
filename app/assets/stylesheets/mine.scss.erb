.hidden {
  visibility: hidden !important;
  max-height: 0px;
}
.wait {
  cursor: wait;
}
#minetouchcontrols {
  position: absolute;
  bottom: 3em;
  max-width: calc(100% - 6em);
  z-index: 7;
  margin: 0 auto;
  display:grid;
  grid-template-columns: 50% 50%;
}
#minedpad {

}
.dpad {
  display: grid;
  margin-left: 1em;
  grid-template-columns: repeat(3, 50px);
    grid-template-rows: repeat(3, 50px);
    grid-gap: 2px;
}
.dpad div {
  display: flex;
align-items: center;
justify-content: center;
}
.dpad div span {
  background-color: rgba(0,0,0, 0.5);
  color: transparent;
  font-size: 30px;
  text-shadow: .5px .5px 1px rgba(255,255,255,1);
  -webkit-background-clip: text;
     -moz-background-clip: text;
          background-clip: text;
}
.dpad div:nth-child(even) {
    background: gray;
  border: 1px solid white;
  -webkit-box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
-moz-box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
  cursor: pointer;

}
.dpad div:nth-child(even):hover {
    background: rgb(55, 55, 55);
}
.dpad div:nth-child(2) {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.dpad div:nth-child(4) {
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.dpad div:nth-child(6) {
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.dpad div:nth-child(8) {
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
#minebuttons {

}
#focus, #helpmodal{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
    background-color: rgba(255, 255, 255, 0.3);
  z-index: 10;
  display: flex;
align-items: center;
justify-content: center;
}
#focusinner, #helpinner {
    background-color: white;
    padding: 5px 10px;
    border-radius: 2px;
position: relative;
-webkit-box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
-moz-box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
box-shadow: 0.5px 1.5px 2px 0.5px rgba(0,0,0,0.5);
}
#helpinner {
    max-width: calc(100% - 8em);
    max-height: calc(100% - 8em);
    overflow-y: scroll;
    padding: 1.5em 2em;
}
#questionmark {
color: red;
cursor: help;
position: absolute;
right: .5em;
top: .5em;
font-size: 30px;
z-index: 9;
text-shadow: 1px 1px 0 white, 1px -1px 0 white, -1px 1px 0 white, -1px -1px 0 white, 1px 0px 0 white, 0px 1px 0 white, -1px 0px 0 white, 0px -1px 0 white, 1px 1px 1px rgba(0, 0, 0, 0);
}
#questionmark:hover {
  color: rgb(92, 0, 0);
}
.closehelp {
  position: absolute;
  top: 0.5em;
  right: 0.5em;

  font-size: 30px;
  color: red;
  cursor: pointer;
}
.closehelp:hover {
  color: rgb(92, 0, 0);
}
.minemap, .minelink {
  display: grid;
  grid-template-columns: repeat(300, 30px);
  grid-template-rows: repeat(40, 30px);
  overflow: scroll;
  max-height: 70vh;
  max-width: 100%;
  background: rgb(125,185,232);
  background: -moz-linear-gradient(top,  rgba(30,87,153,1) 0%, rgba(125,185,232,1) 50%, rgba(125,185,232,1) 50%);
  background: -webkit-linear-gradient(top,  rgba(30,87,153,1) 0%,rgba(125,185,232,1) 50%,rgba(125,185,232,1) 50%);
  background: linear-gradient(to bottom,  rgba(30,87,153,1) 0%,rgba(125,185,232,1) 50%,rgba(125,185,232,1) 50%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1e5799', endColorstr='#7db9e8',GradientType=0 );

}
.minelinkbox {
  max-width: 600px !important;
  margin: 0 auto;
}
.minelink {
  grid-template-columns: repeat(20, 30px);
    max-width: 600px !important;
  grid-template-rows: repeat(7, 30px);
overflow: hidden;
margin: 0 auto;
}
.minemap::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    background: transparent;
}
.minesquare {
  z-index: 1;
 cursor: cell;
}
.mineforeground {
  width: 100%;
  height: 100%;
  border: none;
  z-index: 5;
}
.mineinventory {
  margin: .3em 20px;
display: flex;
align-items: flex-start;
justify-content: space-between;
}
.mineinventory img {
  height: 15px;
  width: 15px;
  margin-right: .2em;
}
.platformimg img {
  height: 2px;
  width: 15px;
  margin-right: .2em;
}
.sky-background {
  // background-color: rgb(149, 206, 244);
}

.bgcloud {
position: relative;
}
.bgcloud::before {
  content: "";
position: absolute;
width: 60px;
height: 30px;
  background-image: url('<%= image_path('mine/bgcloud.png') %>');
  z-index: 1;
  animation: hover 2s infinite;
  animation-direction: alternate-reverse;
  pointer-events: none;
}
@keyframes hover {
  0% {
    left: 0;
  }
  100% {
    left: 4px;
  }
}
.bggrass {
  position: relative;
}
.bggrass::before {
  content: "";
position: absolute;
left: -5px;
top: -18px;
width: 40px;
height: 50px;
  background-image: url('<%= image_path('mine/bggrass.png') %>');
  z-index: -1;
  // pointer-events: none;
}
.cave-background {
  position: relative;
}
.cave-background::before {
  content: "";
position: absolute;
left: -2px;
top: -2px;
width: 34px;
height: 34px;
  background-image: url('<%= image_path('mine/soilbg.png') %>');
  z-index: -1;
  background-position: center;
}
.empty {
  width: 100%;
  height: 100%;
}
.highlight {
  width: calc(100% - 2px);
  height: calc(100% - 2px);
  border: 2px solid rgba(220, 0, 255, 0.36);
  transition-property: border;
  transition-duration: .5s;
}
.rock {
  position: relative;
}
.rock::before {
  content: "";
  width: 30px;
  height: 30px;
  position: absolute;
  background-image: url('<%= image_path('mine/rock.png') %>');
  border-radius: 5px;
  z-index: 5;
  background-position: center;
}
.soil {
  width: 100%;
  height: 100%;
  position: relative;
}
.soil::before {
  content: "";
position: absolute;
left: -2px;
top: -2px;
width: 34px;
height: 34px;
  background-image: url('<%= image_path('mine/soil.png') %>');
  z-index: 5;
  background-position: center;
}
.soil2 {
    position: relative;
  width: 100%;
  height: 100%;
}
.soil2::before {
  content: "";
position: absolute;
left: -2px;
top: -2px;
width: 34px;
height: 34px;
  background-image: url('<%= image_path('mine/soil2.png') %>');
  z-index: 5;
}
.wood {
    background-image: url('<%= image_path('mine/wood.png') %>');
  width: 100%;
  height: 100%;
    z-index: 5;
}

.ironore {
  background-image: url('<%= image_path('mine/ore_iron.png') %>');
  width: 100%;
  height: 100%;
    z-index: 5;
}
.silverore {
  background-image: url('<%= image_path('mine/ore_silver.png') %>');
  width: 100%;
  height: 100%;
    z-index: 5;
}
.goldore {
  background-image: url('<%= image_path('mine/ore_gold.png') %>');
  width: 100%;
  height: 100%;
    z-index: 5;
}
.diamond {
  background-image: url('<%= image_path('mine/ore_diamond.png') %>');
  width: 100%;
  height: 100%;
    z-index: 5;
}
.ladder {
  background-image: url('<%= image_path('mine/ladder.png') %>');
  background-size: auto;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
    z-index: 5;
}
.platform {
  background-image: url('<%= image_path('mine/wood.png') %>');
  clip-path: polygon(0 0, 100% 0, 100% 20%, 0 20%);
  background-size: auto;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
    z-index: 5;
}
.wall {
  background-image: url('<%= image_path('mine/wood.png') %>');
  clip-path: polygon(0 0, 20% 0, 20% 100%, 0% 100%);
  background-size: auto;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
    z-index: 5;
}
.unbreakable {
  background-color: black !important;
  width: 100%;
  height: 100%;
    z-index: 5;
}

.player {
  position: relative;
  bottom: 785px;
  left: 275px;
  transition-property: left, bottom;
  transition-duration: .1s;
  z-index: 6;
    pointer-events: none;
  font-size: 10px;
    text-shadow: 1px 1px 0 white, 1px -1px 0 white, -1px 1px 0 white, -1px -1px 0 white, 1px 0px 0 white, 0px 1px 0 white, -1px 0px 0 white, 0px -1px 0 white, 1px 1px 1px rgba(0, 0, 0, 0);
}
.mineicon {
  font-size: 25px;
}
#panic, #toggletouch {
  background-color: red;
  margin: 3px;
  border-radius: 5px;
  border: none;
  padding: .5em 2em;
  font-family: 'Roboto Condensed', sans-serif;
  color: black;
  text-align: center;
    cursor: pointer;
}
#panic:hover {
  background-color: rgb(92, 0, 0);
}
#toggletouch {
  background-color: rgb(181, 247, 207);
  border: 1px solid black;
}
#toggletouch:hover {
  background-color: rgb(130, 205, 160);
}
@media only screen and (max-width: 600px) {
#mapbox {
    max-width: 100%;
    position: absolute;
    left: -1.5em;
}
#minebox {
  padding-left: 0;
  padding-right: 0;
  padding-top: 0;
  overflow: visible;
}
#questionmark {
  right: -1em;
}
#minemap {
    max-width: 100vw;
    width: 100vw;
  max-height: calc(100vh - 10em);
  height: calc(100vh - 10em);
}
.noscroll {
  overflow: hidden !important;
}
#focus, #helpmodal{
  position: absolute;
  width: 100vw;
}
.mineinventory {
  position: absolute;
  bottom: 3.2em;
  width: 100vw;
  margin-left: -1.5em;
  z-index: 11;
  background-color: white;
  padding: .5em;
  height: 2em;
}
#minetouchcontrols {
  bottom: 5em;
}
#helpinner {
max-height: calc(100vh - 18em);
}
}

@media only screen and (max-height: 800px) {
#mapbox {
  height: 100vh;
  max-height: calc(100vh - 6em);
}
#minebox {
  height: 100vh;
  max-height: calc(100vh - 4em);
}

}
